<h1>Edit Post Type</h1>
<p>You're editing the <%= post_type_badge(@type) %> post type.</p>

<% if @type.errors.any? %>
  <div class="notice is-danger">
    <%= pluralize(@type.errors.size, 'error') %> prevented this post type being saved:

    <ul>
      <% @type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render 'form', submit_path: update_post_type_path(@type) %>
